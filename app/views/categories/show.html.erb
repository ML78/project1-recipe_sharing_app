<h1> <%= @category.title.capitalize %> </h1>

<div>

  <% unless @category.image.empty? %>
    <%= link_to image_tag(@category.image, :alt => @category.title, :class => 'thumbnail'), @category.image %>
  <% end %>

  <% if @category.recipes.count !=0 %>
    <h2>Recipes</h2>
      <% @category.recipes.each do |recipe| %>
        <ul>
          <li>
            <%= link_to recipe.title, recipe %>
          </li>
        </ul>
      <% end %>
      <% else %>
      <p>No recipes have been added</p>
  <% end %>
</div>

<div class="controls">
  <% if @current_user.present? && @current_user.admin %>
    <%= link_to 'Edit category', edit_category_path(@category) %>
    <%= link_to 'Delete category', @category, :method => 'delete', :data => { :confirm => 'Are you sure you want to delete this category?' } %>
  <% end %>
</div>

<div>
  [ <%= link_to 'Go back to categories listing', categories_path %> ]
</div>
