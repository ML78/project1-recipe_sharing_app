<h1>Ingredients</h1>

<% @ingredients.each do |ingredient| %>
  <ul>
    <li> <%= link_to ingredient.name.capitalize, ingredient %> </li>
    <li> <%= pluralize(ingredient.recipes.count, "recipe") if ingredient.recipes %> </li>
  </ul>
<% end %>

<% if @current_user.present? %>
  <p><%= link_to "Add a new ingredient", new_ingredient_path, :class => 'btn btn-warning' %></p>
<% end %>
