<h1><%= @ingredient.name %></h1>

<% if @ingredient.recipes.count !=0 %>
  <h2>Recipes</h2>
    <% @ingredient.recipes.each do |recipe| %>
      <ul>
        <li>
          <%= link_to recipe.title, recipe %>
        </li>
      </ul>
    <% end %>
    <% else %>
    <p>No recipes have been added</p>
  <% end %>

  <div class="controls">
    <%= link_to 'Edit ingredient', edit_ingredient_path(@ingredient) %>
    <%= link_to 'Delete ingredient', @ingredient, :method => 'delete', :data => { :confirm => 'Are you sure you want to delete this ingredient?' } %>
  </div>

  <div>
    [ <%= link_to 'Go back to ingredients listing', ingredients_path %> ]
    [ <%= link_to 'Go back to profile page', user_path(session[:user_id]) %> ]
  </div>
