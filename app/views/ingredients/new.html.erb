<h1>Add Ingredient</h1>

<!-- error handling -->
<div>
  <% if @ingredient.errors.any? %>
    <ol>
      <% @ingredient.errors.full_messages.each do |msg| %>
        <li><%= msg.capitalize %></li>
      <% end %>
    </ol>
  <% end %>
</div>

<div>
  <%= render :partial => 'form' %>
</div>

<div>
  [ <%= link_to 'Go back to ingredients listing', ingredients_path %> ]
</div>
