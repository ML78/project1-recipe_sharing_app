<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :autofocus => true %>

  <%= f.label :description, "Instructions"%>
  <%= f.text_field :description %>

  <%= f.label :image, "Image url" %>
  <%= f.url_field :image %>

  <%= f.label :user_id, "Posted by" %>
  <%= f.select :user_id, User.pluck(:name, :id), :include_blank => true %>

  <%= f.submit(@recipe.new_record? ? "Create recipe" : "Update recipe") %>
<% end %>
